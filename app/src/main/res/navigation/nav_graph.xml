<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_welcome">

    <fragment
        android:id="@+id/fragment_welcome"
        android:name="com.example.jotto_game.start.view.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcome_to_setup"
            app:destination="@id/fragment_setup"></action>

    </fragment>

    <fragment
        android:id="@+id/fragment_setup"
        android:name="com.example.jotto_game.start.view.SetupFragment"
        android:label="fragment_setup"
        tools:layout="@layout/fragment_setup">

        <argument
            android:name="numberOfLetter"
            android:defaultValue=""
            app:argType="string" />

        <argument
            android:name="difficulty"
            android:defaultValue=""
            app:argType="string" />

    </fragment>

</navigation>